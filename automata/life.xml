<xml version="1.0">

<automata>
        <category>
            <type>CA</type>
            <name>Life</name>
            <descr>The most populare cellular automata.</descr>
	</category>
	<field>
            <type>grid</type>
            <width>50</width>
            <height>50</height>
	</field>
	<statelist>
                <state>
                    <name>death</name>
                    <color>white</color>
		</state>
                <state>
                    <name>alife</name>
                    <color>blue</color>
		</state>
	</statelist>
	<parameterlist>
                <parameter>
                    <name>plane</name>
                    <value>0</value>
                </parameter>
                <parameter>
                    <name>open</name>
                    <value>1</value>
                </parameter>
                <parameter>
                    <name>gridcolor</name>
                    <value>yellow</value>
                </parameter>
	</parameterlist>
	<initialize>
                <square>
                    <top>5</top>
                    <left>5</left>
                    <extent>10</extent>
                    <state>alife</state>
                </square>
	</initialize>
	<rulelist>
                <rule>
                    <name>always alife</name>
                    <result>1</result>
                    <if>CELL=1 AND (SUM(1) = 2 OR SUM(1) = 3)</if>
                </rule>
                <rule>
                    <name>born</name>
                    <result>1</result>
                    <if>CELL=0 AND SUM(1) = 3</if>
		</rule>
                <rule>
                    <name>death</name>
                    <result>0</result>
                    <if>true</if>
		</rule>
	</rulelist>
</automata>
</xml>
